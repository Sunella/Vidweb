<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="search" method="upgrade">
	<name>Search - MijoVideos</name>
    <author>Mijosoft LLC</author>
    <creationDate>February 2014</creationDate>
    <authorEmail>info@mijosoft.com</authorEmail>
    <authorUrl>http://mijosoft.com</authorUrl>
    <copyright>2009-2014 Mijosoft LLC</copyright>
    <license>GNU/GPL, http://www.gnu.org/licenses/gpl-2.0.html</license>
	<version>1.0.0</version>
	<description>Enables searching in Videos.</description>
	
	<files>
		<filename plugin="mijovideos">mijovideos.php</filename>
	</files>
	
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="search_limit" type="text" size="5" default="50" label="Search Limit" description="Number of Search items to return"/>
			</fieldset>
		</fields>
	</config>	
</extension>