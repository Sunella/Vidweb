<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="module" client="administrator" method="upgrade">
	<name>MijoVideos - Quick Icons</name>
    <author>Mijosoft LLC</author>
    <creationDate>February 2014</creationDate>
    <authorEmail>info@mijosoft.com</authorEmail>
    <authorUrl>http://mijosoft.com</authorUrl>
    <copyright>2009-2014 Mijosoft LLC</copyright>
    <license>GNU/GPL, http://www.gnu.org/licenses/gpl-2.0.html</license>
    <version>1.0.0</version>
	<description>This module shows MijoVideos Quick Icons on the Admin area Home Page. Publish in "icon" position.</description>
	
	<files>
		<filename module="mod_mijovideos_quickicons">mod_mijovideos_quickicons.php</filename>
		<filename>index.html</filename>
	</files>
	
    <languages folder="language">
        <language tag="en-GB">en-GB.mod_mijovideos_quickicons.ini</language>
    </languages>
	
	<config>
		<fields name="params">
			<fieldset name="basic" >
				<field name="mijovideos_fields" type="radio" class="btn-group" default="0" label="MOD_MIJOVIDEOS_QUICKICONS_FIELDS" description="Show Fields button.">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="mijovideos_categories" type="radio" class="btn-group" default="1" label="MOD_MIJOVIDEOS_QUICKICONS_CATEGORIES" description="Show Categories button.">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="mijovideos_locations" type="radio" class="btn-group" default="1" label="MOD_MIJOVIDEOS_QUICKICONS_CHANNELS" description="Show Channels button.">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="mijovideos_videos" type="radio" class="btn-group" default="1" label="MOD_MIJOVIDEOS_QUICKICONS_PLAYLISTS" description="Show Playlists button.">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="mijovideos_channels" type="radio" class="btn-group" default="1" label="MOD_MIJOVIDEOS_QUICKICONS_VIDEOS" description="Show Videos button.">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>