<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="module" client="site" method="upgrade">
	<name>MijoVideos - Channels</name>
    <author>Mijosoft LLC</author>
    <creationDate>February 2014</creationDate>
    <authorEmail>info@mijosoft.com</authorEmail>
    <authorUrl>http://mijosoft.com</authorUrl>
    <copyright>2009-2014 Mijosoft LLC</copyright>
    <license>GNU/GPL, http://www.gnu.org/licenses/gpl-2.0.html</license>
    <version>1.0.0</version>
	<description>This module is used to the list of channels.</description>
	
	<files>
		<filename module="mod_mijovideos_channels">mod_mijovideos_channels.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>
	
	<config>
		<fields name="params">
			<fieldset name="basic">				
				<field name="show_featured" defaut="0" type="radio" class="btn-group" label="Show Featured ?">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
				<field name="moduleclass_sfx" type="text" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
				<field name="number_channels" type="text" default="5" label="Number of Channels" description="Number of Channels to be shown." />
                <field name="thumb_width" type="text" default="130" label="Thumbnail Width(px)" description="Thumbnail Width(px)" />
                <field name="thumb_height" type="text" default="100" label="Thumbnail Height(px)" description="Thumbnail Height(px)" />
			</fieldset>
		</fields>		
	</config>
</extension>